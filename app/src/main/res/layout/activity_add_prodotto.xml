<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent"
android:gravity="center">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp">
    <ImageView
            android:id="@+id/image_add"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/ic_add">

    </ImageView>
</LinearLayout>



    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/tv_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome prodotto"
        ></TextView>
    <EditText
        android:id="@+id/texteditName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="nome del prodotto"></EditText>

</LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_descrizione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrizione prodotto"
        ></TextView>
    <EditText
        android:id="@+id/texteditdescrizione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="descrizione del prodotto"></EditText>


</LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/msg_errore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""></TextView>

    <Button
        android:id="@+id/conferma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="crea prodotto"
        >

    </Button>


</LinearLayout>
</LinearLayout>
